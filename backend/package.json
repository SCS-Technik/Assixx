{
  "name": "assixx-backend",
  "version": "1.0.0",
  "description": "Assixx Multi-Tenant SaaS Backend",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest -c jest.config.cjs",
    "test:watch": "jest -c jest.config.cjs --watch",
    "test:coverage": "jest -c jest.config.cjs --coverage",
    "test:attachments": "jest -c jest.config.cjs --testPathPattern=attachments --verbose",
    "test:e2e": "jest --testPathPattern=e2e --runInBand",
    "test:integration": "jest --testPathPattern=integration --runInBand",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prettier": "prettier --check src/**/*.ts",
    "prettier:fix": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "db:migrate": "node scripts/run-migration.js",
    "db:seed": "node scripts/seed-database.js",
    "setup:dev": "npm run build && npm run db:migrate && npm run db:seed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "saas",
    "multi-tenant",
    "nodejs",
    "typescript",
    "mysql"
  ],
  "author": "SCS Technik",
  "license": "MIT",
  "dependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/ws": "^8.18.1",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "multer": "^2.0.1",
    "mysql2": "^3.6.5",
    "node-cron": "^4.2.0",
    "nodemailer": "^7.0.5",
    "socket.io": "^4.7.2",
    "winston": "^3.11.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@jest/globals": "^29.7.0",
    "@swc/core": "^1.12.11",
    "@types/cookie-parser": "^1.4.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.12",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.1",
    "jest": "^30.0.4",
    "nodemon": "^3.0.2",
    "prettier": "^3.6.2",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
