{
  "name": "assixx-backend",
  "version": "1.0.0",
  "description": "Assixx Multi-Tenant SaaS Backend",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest -c jest.config.cjs",
    "test:watch": "jest -c jest.config.cjs --watch",
    "test:coverage": "jest -c jest.config.cjs --coverage",
    "test:attachments": "jest -c jest.config.cjs --testPathPattern=attachments --verbose",
    "test:e2e": "jest --testPathPattern=e2e --runInBand",
    "test:integration": "jest --testPathPattern=integration --runInBand",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "db:migrate": "node scripts/run-migration.js",
    "db:seed": "node scripts/seed-database.js",
    "setup:dev": "npm run build && npm run db:migrate && npm run db:seed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "keywords": [
    "saas",
    "multi-tenant",
    "nodejs",
    "typescript",
    "mysql"
  ],
  "author": "SCS Technik",
  "license": "MIT",
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node-cron": "^3.0.11",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.1",
    "mysql2": "^3.6.5",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.7",
    "socket.io": "^4.7.2",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/cookie-parser": "^1.4.6",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.4",
    "@types/nodemailer": "^6.4.14",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}