{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["node", "jest"],
    "lib": ["esnext"],
    "skipLibCheck": true
  },
  "include": [
    "backend/src/**/*.ts",
    "backend/src/**/*.test.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}