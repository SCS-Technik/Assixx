      console.info('[BlackboardWidget] API Response - entries array:', entries);
      console.info('[BlackboardWidget] Number of entries:', entries.length);
      console.info('[BlackboardWidget] First entry (if any):', entries[0]);

      // Clear loading placeholder
      widgetContent.innerHTML = '';

      if (entries.length === 0) {
        console.info('[BlackboardWidget] No entries found, showing empty state');
        // Empty state
        widgetContent.innerHTML = `
          <div class="blackboard-empty-state">
            <i class="fas fa-clipboard"></i>
            <p>Keine Einträge vorhanden</p>
          </div>
        `;
        return;
      }

      // Create mini-notes container
      const miniNotesContainer = document.createElement('div');
      miniNotesContainer.className = 'mini-notes-container';

      console.info('[BlackboardWidget] Creating mini-notes for entries...');

      // Render entries as mini-notes
      entries.forEach((entry: BlackboardEntry, index: number) => {
        console.info(`[BlackboardWidget] Processing entry ${index + 1}:`, entry);

        const noteDiv = document.createElement('div');
        const colorClass = entry.color ?? 'white';
        const hasAttachment = entry.attachments && entry.attachments.length > 0;
        noteDiv.className = `mini-note ${colorClass}${hasAttachment ? ' has-attachment' : ''}`;
        noteDiv.id = `mini-note-${entry.id}`;

        let attachmentHtml = '';
        if (hasAttachment && entry.attachments?.[0]) {
          const attachment = entry.attachments[0];
          // Handle v2 API path for attachments
          const attachmentPath = useV2Blackboard
            ? `/api/v2/blackboard/attachments/${attachment.id}`
            : `/api/blackboard/attachments/${attachment.id}/preview`;

          if (attachment.mime_type === 'application/pdf') {
            // PDF preview - using new approach with scaling
            attachmentHtml = `
              <div class="mini-note-attachment" style="position: relative; height: 220px; background: #f5f5f5; border-radius: 4px; overflow: hidden;">
                <div style="transform: scale(0.15); transform-origin: top left; width: ${100 / 0.15}%; height: ${100 / 0.15}%;">
                  <object data="${attachmentPath}#toolbar=0&navpanes=0&scrollbar=0&view=FitH"
                          type="application/pdf"
                          style="width: 100%; height: 100%; pointer-events: none;">
                    <div style="display: flex; flex-direction: column; align-items: center; justify-content: center; height: 100%; color: #666;">
                      <i class="fas fa-file-pdf" style="font-size: 32px; color: #dc3545; margin-bottom: 5px;"></i>
                      <div style="font-size: 10px;">PDF-Dokument</div>
                    </div>
                  </object>
                </div>
              </div>
            `;
          } else if (attachment.mime_type.startsWith('image/')) {
            // Image preview
            attachmentHtml = `
              <div class="mini-note-attachment">
                <img src="${attachmentPath}"
                     alt="${attachment.original_name}"
                     style="width: 100%; height: auto; max-height: 120px; object-fit: cover; border-radius: 4px;"
                     loading="lazy"
                     onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                <div style="display: none; flex-direction: column; align-items: center; justify-content: center; height: 80px; color: #666;">
                  <i class="fas fa-image" style="font-size: 24px; margin-bottom: 5px;"></i>
                  <span style="font-size: 10px;">Bild</span>
                </div>
              </div>
            `;
          }
        }

        // Handle v1 vs v2 field names
        const createdAt = entry.created_at ?? entry.createdAt ?? '';
        const priorityLevel = entry.priority_level ?? entry.priorityLevel ?? 'normal';

        const createdDate = new Date(createdAt);
        const dateStr = createdDate.toLocaleDateString('de-DE', { day: '2-digit', month: '2-digit' });

        noteDiv.innerHTML = `
          <div class="mini-pushpin"></div>
          <div class="mini-note-title">${entry.title}</div>
          ${attachmentHtml}
          <div class="mini-note-meta">
            <span class="mini-note-priority">
              <span class="priority-dot ${priorityLevel}"></span>
              ${getPriorityLabel(priorityLevel)}
            </span>
            <span>${dateStr}</span>
          </div>
        `;

        noteDiv.onclick = () => {
          window.location.href = '/blackboard';
        };

        miniNotesContainer.appendChild(noteDiv);
      });

      widgetContent.appendChild(miniNotesContainer);
      console.info('[BlackboardWidget] Mini-notes container appended to widget content');

      // Add widget loaded class
      const widget = containerElement.querySelector('.blackboard-widget');
      if (widget !== null && widget !== undefined && widget !== '') {
        widget.classList.add('loaded');
        console.info('[BlackboardWidget] Widget marked as loaded');
      }
    } catch (error) {
      console.error('[BlackboardWidget] Error loading widget:', error);

      const widgetContent = document.getElementById('blackboard-widget-content');
      if (widgetContent !== null && widgetContent !== undefined && widgetContent !== '') {
        widgetContent.innerHTML = `
          <div class="blackboard-empty-state">
            <i class="fas fa-exclamation-triangle"></i>
            <p>Fehler beim Laden</p>
          </div>
        `;
      }
    }
  }

  // Create Employee
  async function createEmployee(e: Event): Promise<void> {
    e.preventDefault();

    if (createEmployeeForm === null) return;

    // Disable submit button to prevent double submission
    const submitButton = createEmployeeForm.querySelector('button[type="submit"]');
    if (submitButton !== null) {
      submitButton.disabled = true;
      submitButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Erstelle...';
    }

    const formData = new FormData(createEmployeeForm);
    const employeeData = Object.fromEntries(formData.entries()) as unknown as EmployeeFormData;

    // E-Mail-Übereinstimmung prüfen
    const emailError = document.getElementById('email-error');
    if (employeeData.email !== employeeData.emailConfirm) {
      // Fixed: camelCase field name
      if (emailError !== null) emailError.style.display = 'block';

      showError('Die E-Mail-Adressen stimmen nicht überein');
      // Re-enable submit button
      if (submitButton !== null) {
        submitButton.disabled = false;
        submitButton.innerHTML = '<i class="fas fa-save"></i> Mitarbeiter erstellen';
      }
      return;
    } else {
      if (emailError !== null) emailError.style.display = 'none';
    }

    // Passwort-Übereinstimmung prüfen
    const passwordError = document.getElementById('password-error');
    if (employeeData.password !== employeeData.passwordConfirm) {
      // Fixed: camelCase field name
      if (passwordError !== null) passwordError.style.display = 'block';

      showError('Die Passwörter stimmen nicht überein');
      // Re-enable submit button
      if (submitButton !== null) {
        submitButton.disabled = false;
        submitButton.innerHTML = '<i class="fas fa-save"></i> Mitarbeiter erstellen';
      }
      return;
    } else {
      if (passwordError !== null) passwordError.style.display = 'none';
    }

    try {
      const useV2Users = Boolean(window.FEATURE_FLAGS?.USE_API_V2_USERS);
      let response: Response | { success: boolean; error?: string; data?: User };

      // In your system: username = email (they are the same)
      const timestamp = Date.now(); // For employee_id generation

      // Generate unique employee_id if not provided
      const uniqueEmployeeId = employeeData.employeeNumber?.trim() ?? `EMP${timestamp}`;

      console.info('[CreateEmployee] Debug - Generated values:', {
        username: employeeData.email, // Username IS the email
        email: employeeData.email,
        employeeId: uniqueEmployeeId,
        employeeNumber: employeeData.employeeNumber,
      });

      const userData = {
        username: employeeData.email, // Username MUST be the email in your system
        email: employeeData.email,
        password: employeeData.password,
        first_name: employeeData.firstName, // Convert from camelCase form data
        last_name: employeeData.lastName, // Convert from camelCase form data
        employee_id: uniqueEmployeeId, // Use unique employee ID
        department_id: employeeData.departmentId ? parseInt(employeeData.departmentId, 10) : null,
        phone: employeeData.phone?.trim() ?? null, // Send NULL if empty, not empty string
        birth_date: employeeData.birthDate ?? null, // Convert from camelCase form data
        start_date: employeeData.startDate ?? null, // Convert from camelCase form data
        street: employeeData.street?.trim() ?? null, // Send NULL if empty
        house_number: employeeData.houseNumber?.trim() ?? null, // Send NULL if empty
        postal_code: employeeData.postalCode?.trim() ?? null, // Send NULL if empty
        city: employeeData.city?.trim() ?? null, // Send NULL if empty
        role: 'employee', // Explicitly set role for v2 API
        is_active: employeeData.isActive === '1' || employeeData.isActive === undefined, // Default to active (true)
      };

      if (useV2Users !== null && useV2Users !== undefined && useV2Users !== '') {
        // Use apiClient for v2 - convert snake_case to camelCase
        // For v2 API: only include non-null fields
        const v2UserData: Record<string, unknown> = {
          username: userData.username,
          email: userData.email,
          password: userData.password,
          firstName: userData.first_name,
          lastName: userData.last_name,
          employeeId: userData.employee_id,
          role: userData.role,
          isActive: userData.is_active, // Convert snake_case to camelCase
        };

        // Only add optional fields if they have values (not null)
        if (userData.department_id !== null) v2UserData.departmentId = userData.department_id;
        if (userData.phone !== null) v2UserData.phone = userData.phone;
        if (userData.birth_date !== null) v2UserData.birthDate = userData.birth_date;
        if (userData.start_date !== null) v2UserData.startDate = userData.start_date;
        if (userData.street !== null) v2UserData.street = userData.street;
        if (userData.house_number !== null) v2UserData.houseNumber = userData.house_number;
        if (userData.postal_code !== null) v2UserData.postalCode = userData.postal_code;
        if (userData.city !== null) v2UserData.city = userData.city;

        try {
          response = await apiClient.post('/users', v2UserData);
        } catch (error) {
          response = { success: false, error: (error as Error).message ?? 'Failed to create employee' };
        }
      } else {
        // Use v1 API
        response = await fetch('/api/admin/employees', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
            Authorization: `Bearer ${token}`,
          },
          body: JSON.stringify(userData),
        });
      }

      // For v2 API: If response has an 'id' property, it was successful (apiClient returns the created user)
      // For v1 API: Check response.ok
      const isSuccess = useV2Users
        ? (response as User & { success?: boolean }).id !== undefined || (response as { success: boolean }).success
        : (response as Response).ok;

      if (isSuccess !== null && isSuccess !== undefined && isSuccess !== '') {
        showSuccess('Mitarbeiter erfolgreich erstellt');
        createEmployeeForm.reset();

        // Modal schließen
        const modal = document.getElementById('employee-modal');
        if (modal !== null) modal.style.display = 'none';

        // Listen neu laden
        void loadRecentEmployees();
        void loadDashboardStats();

        // Seite neu laden für komplette Aktualisierung
        setTimeout(() => {
          window.location.reload();
        }, 1000); // Kurze Verzögerung damit die Erfolgsmeldung noch sichtbar ist
      } else {
        let errorMessage: string;
        if (useV2Users !== null && useV2Users !== undefined && useV2Users !== '') {
          errorMessage = (response as { error?: string }).error ?? 'Fehler beim Erstellen des Mitarbeiters';
        } else {
          const error = await (response as Response).json();
          errorMessage = error.message ?? 'Fehler beim Erstellen des Mitarbeiters';
        }
        showError(errorMessage);
        // Re-enable submit button on error
        if (submitButton !== null && submitButton !== undefined && submitButton !== '') {
          submitButton.disabled = false;
          submitButton.innerHTML = '<i class="fas fa-save"></i> Mitarbeiter erstellen';
        }
      }
    } catch (error) {
      console.error('Fehler beim Erstellen des Mitarbeiters:', error);
      showError('Ein Fehler ist aufgetreten. Bitte versuchen Sie es später erneut.');
      // Re-enable submit button on error
      const submitButton = createEmployeeForm?.querySelector('button[type="submit"]')!;
      if (submitButton !== null && submitButton !== undefined && submitButton !== '') {
        submitButton.disabled = false;
        submitButton.innerHTML = '<i class="fas fa-save"></i> Mitarbeiter erstellen';
      }
    }
  }

