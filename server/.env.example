# Assixx Environment Configuration
# Copy this file to .env and update the values

# Server Configuration
NODE_ENV=production
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_USER=assixx_user
DB_PASSWORD=your_secure_password_here
DB_DATABASE=assixx

# Security Configuration
JWT_SECRET=your_very_long_random_string_here
SESSION_SECRET=another_very_long_random_string_here
ENCRYPTION_KEY=64_character_hex_string_here

# JWT Rotation (for future implementation)
JWT_SECRET_CURRENT=current_secret_here
JWT_SECRET_PREVIOUS=previous_secret_here
JWT_ROTATION_DATE=2024-01-01

# CORS Configuration
ALLOWED_ORIGINS=https://*.assixx.com,https://*.assixx.de

# Redis Configuration (for session management)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_here

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@assixx.com
SMTP_PASS=email_password_here

# Stripe Configuration (for future implementation)
STRIPE_PUBLIC_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_CLOUD_REGION=europe-west3

# Security Monitoring
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
LOG_LEVEL=info

# Backup Configuration
BACKUP_ENCRYPTION_KEY=backup_encryption_key_here
S3_BACKUP_BUCKET=assixx-backups

# Feature Flags
ENABLE_SSO=false
ENABLE_2FA=true
ENABLE_AUDIT_LOGS=true
ENABLE_ENCRYPTION_AT_REST=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_MAX=5