# Beispieldatei für Testumgebung
# Kopiere diese Datei zu .env für lokale Tests

# SERVER ENVIRONMENT
NODE_ENV=development  # Wichtig für die Test-Routen, nicht auf 'production' ändern!
PORT=3000

# JWT SECRET
JWT_SECRET=your_secret_key_for_testing  # Ersetze dies mit einem sicheren Schlüssel

# DATABASE
DB_HOST=localhost
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_db_name

# TEST USER ID
# Diese ID wird für die Test-API-Endpunkte verwendet (ohne Authentifizierung)
TEST_USER_ID=1  # Hier eine vorhandene Mitarbeiter-ID eintragen

# ALLOWED ORIGINS FOR CORS
CORS_ORIGIN=http://localhost:3000,http://127.0.0.1:3000

# LOGGING
LOG_LEVEL=debug