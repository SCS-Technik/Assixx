{
  "name": "assixx",
  "version": "1.0.0",
  "type": "module",
  "main": "backend/src/server.ts",
  "pnpm": {
    "overrides": {
      "tmp": "^0.2.4",
      "vite@>=7.1.0 <=7.1.4": ">=7.1.5",
      "axios@<1.12.0": ">=1.12.0"
    }
  },
  "scripts": {
    "start": "node dist/backend/src/server.js",
    "start:prod": "node dist/backend/src/server.js",
    "dev": "concurrently \"pnpm run dev:backend:ts\" \"pnpm run dev:frontend\"",
    "dev:backend": "nodemon backend/src/server.js",
    "dev:backend:ts": "nodemon --exec \"tsx\" backend/src/server.ts",
    "dev:frontend": "cd frontend && pnpm run dev",
    "build": "pnpm run build:ts && pnpm run build:frontend",
    "build:ts": "cd backend && tsc -p tsconfig.build.json && cd .. && node scripts/fix-esm-imports.js",
    "build:frontend": "cd frontend && pnpm run build",
    "watch:ts": "tsc --watch",
    "install:all": "pnpm install && cd frontend && pnpm install",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:report": "eslint . --format json > eslint-report.json",
    "security:check": "eslint . --ext .ts,.tsx,.js,.jsx --plugin security,no-unsanitized",
    "security:report": "eslint . --ext .ts,.tsx,.js,.jsx --plugin security,no-unsanitized --format json > security-report.json",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.js --coverage",
    "type-check": "tsc --noEmit",
    "type-check:prod": "sh scripts/check-types-prod.sh",
    "type-coverage": "pnpm exec type-coverage",
    "check": "tsc --noEmit",
    "lint:ts": "eslint backend/src/**/*.ts",
    "test:all": "pnpm run check && pnpm run lint:ts && pnpm run format:check",
    "fix:all": "pnpm run format && pnpm run lint:fix && pnpm run stylelint:fix",
    "check:all": "pnpm run format && pnpm run lint:fix && pnpm run type-check && pnpm run stylelint",
    "stylelint": "stylelint \"**/*.{css,scss}\" --cache --cache-location .stylelintcache",
    "stylelint:fix": "stylelint \"**/*.{css,scss}\" --fix --cache --cache-location .stylelintcache",
    "stylelint:report": "stylelint \"**/*.{css,scss}\" --formatter json > stylelint-report.json",
    "css:analyze": "npx purgecss --config ./purgecss.config.cjs --output ./frontend/dist/css/",
    "css:check-unused": "npx purgecss --config ./purgecss.config.cjs --rejected --output /tmp/unused.css"
  },
  "keywords": [
    "assixx",
    "saas",
    "enterprise",
    "document-management"
  ],
  "author": "Simon Öztürk <info@scs-technik.de>",
  "license": "Proprietary",
  "private": true,
  "description": "Assixx SaaS-Plattform für Industriefirmen - Server-Komponente",
  "dependencies": {
    "@types/express-serve-static-core": "^5.0.7",
    "@types/qs": "^6.14.0",
    "@types/uuid": "^10.0.0",
    "archiver": "^7.0.1",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csrf-csrf": "^4.0.3",
    "dotenv": "^17.2.2",
    "ejs": "^3.1.10",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "mysql2": "^3.14.5",
    "nodemailer": "^7.0.6",
    "redis": "^5.8.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "winston": "^3.17.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@swc/core": "^1.13.5",
    "@swc/helpers": "^0.5.17",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/hpp": "^0.2.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.20",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.5.0",
    "@types/nodemailer": "^7.0.1",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-html": "^8.1.3",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jsdoc": "^58.0.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-no-unsanitized": "^4.1.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-regexp": "^2.10.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-tsdoc": "^0.4.0",
    "eslint-plugin-unicorn": "^61.0.2",
    "jest": "^30.1.3",
    "markdownlint-cli": "^0.45.0",
    "nodemon": "^3.1.10",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "prettier-plugin-css-order": "^2.1.2",
    "stylelint": "^16.24.0",
    "stylelint-config-clean-order": "^7.0.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-order": "^7.0.0",
    "stylelint-prettier": "^5.0.3",
    "stylelint-scss": "^6.12.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
