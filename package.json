{
  "name": "assixx",
  "version": "1.0.0",
  "type": "module",
  "main": "backend/src/server.ts",
  "scripts": {
    "start": "node dist/backend/src/server.js",
    "start:prod": "node dist/backend/src/server.js",
    "dev": "concurrently \"pnpm run dev:backend:ts\" \"pnpm run dev:frontend\"",
    "dev:backend": "nodemon backend/src/server.js",
    "dev:backend:ts": "nodemon --exec \"tsx\" backend/src/server.ts",
    "dev:frontend": "cd frontend && pnpm run dev",
    "build": "pnpm run build:ts && pnpm run build:frontend",
    "build:ts": "cd backend && tsc -p tsconfig.build.json && cd .. && node scripts/fix-esm-imports.js",
    "build:frontend": "cd frontend && pnpm run build",
    "watch:ts": "tsc --watch",
    "install:all": "pnpm install && cd frontend && pnpm install",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:report": "eslint . --format json > eslint-report.json",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.js --coverage",
    "type-check": "tsc --noEmit",
    "type-check:prod": "sh scripts/check-types-prod.sh",
    "type-coverage": "pnpm exec type-coverage",
    "check": "tsc --noEmit",
    "lint:ts": "eslint backend/src/**/*.ts",
    "test:all": "pnpm run check && pnpm run lint:ts && pnpm run format:check",
    "fix:all": "pnpm run format && pnpm run lint:fix",
    "check:all": "pnpm run format && pnpm run lint:fix && pnpm run type-check"
  },
  "keywords": [
    "assixx",
    "saas",
    "enterprise",
    "document-management"
  ],
  "author": "Simon Öztürk <info@scs-technik.de>",
  "license": "Proprietary",
  "private": true,
  "description": "Assixx SaaS-Plattform für Industriefirmen - Server-Komponente",
  "dependencies": {
    "@types/express-serve-static-core": "^5.0.7",
    "@types/qs": "^6.14.0",
    "@types/uuid": "^10.0.0",
    "archiver": "^7.0.1",
    "axios": "^1.11.0",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csrf-csrf": "^4.0.3",
    "dotenv": "^17.2.1",
    "ejs": "^3.1.10",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "mysql2": "^3.14.4",
    "nodemailer": "^7.0.6",
    "redis": "^5.8.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@swc/core": "^1.13.5",
    "@swc/helpers": "^0.5.17",
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/hpp": "^0.2.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.20",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.3.0",
    "@types/nodemailer": "^7.0.1",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.38.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.1.2",
    "nodemon": "^3.1.10",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
