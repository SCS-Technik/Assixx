{
  "name": "assixx",
  "version": "1.0.0",
  "type": "module",
  "main": "backend/src/server.ts",
  "scripts": {
    "start": "node dist/backend/src/server.js",
    "start:prod": "node dist/backend/src/server.js",
    "dev": "concurrently \"npm run dev:backend:ts\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon backend/src/server.js",
    "dev:backend:ts": "nodemon --exec \"tsx\" backend/src/server.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:ts && npm run build:frontend",
    "build:ts": "tsc && node scripts/fix-esm-imports.js",
    "build:frontend": "cd frontend && npm run build",
    "watch:ts": "tsc --watch",
    "install:all": "npm install && cd frontend && npm install",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:report": "eslint . --format json > eslint-report.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "type-coverage": "npx type-coverage",
    "check": "tsc --noEmit",
    "lint:ts": "eslint backend/src --ext .ts",
    "test:all": "npm run check && npm run lint:ts && npm run format:check"
  },
  "keywords": [
    "assixx",
    "saas",
    "enterprise",
    "document-management"
  ],
  "author": "Simon Öztürk <info@scs-technik.de>",
  "license": "Proprietary",
  "private": true,
  "description": "Assixx SaaS-Plattform für Industriefirmen - Server-Komponente",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csrf-csrf": "^4.0.3",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.10",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.0",
    "mysql2": "^3.14.1",
    "nodemailer": "^7.0.3",
    "winston": "^3.17.0",
    "ws": "^8.18.2",
    "xss-clean": "^0.1.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@swc/core": "^1.11.29",
    "@swc/helpers": "^0.5.17",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/express-rate-limit": "^5.1.3",
    "@types/express-validator": "^2.20.33",
    "@types/helmet": "^0.0.48",
    "@types/hpp": "^0.2.6",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.15.29",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.33.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.4.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3"
  }
}
