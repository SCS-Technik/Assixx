{
  "name": "assixx",
  "version": "1.0.0",
  "type": "module",
  "main": "backend/src/server.ts",
  "scripts": {
    "start": "node dist/backend/src/server.js",
    "start:prod": "node dist/backend/src/server.js",
    "dev": "concurrently \"pnpm run dev:backend:ts\" \"pnpm run dev:frontend\"",
    "dev:backend": "nodemon backend/src/server.js",
    "dev:backend:ts": "nodemon --exec \"tsx\" backend/src/server.ts",
    "dev:frontend": "cd frontend && pnpm run dev",
    "build": "pnpm run build:ts && pnpm run build:frontend",
    "build:ts": "cd backend && tsc -p tsconfig.build.json && cd .. && node scripts/fix-esm-imports.js",
    "build:frontend": "cd frontend && pnpm run build",
    "watch:ts": "tsc --watch",
    "install:all": "pnpm install && cd frontend && pnpm install",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:report": "eslint . --format json > eslint-report.json",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.cjs",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.cjs --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.config.cjs --coverage",
    "type-check": "tsc --noEmit",
    "type-coverage": "pnpm exec type-coverage",
    "check": "tsc --noEmit",
    "lint:ts": "eslint backend/src/**/*.ts",
    "test:all": "pnpm run check && pnpm run lint:ts && pnpm run format:check"
  },
  "keywords": [
    "assixx",
    "saas",
    "enterprise",
    "document-management"
  ],
  "author": "Simon Öztürk <info@scs-technik.de>",
  "license": "Proprietary",
  "private": true,
  "description": "Assixx SaaS-Plattform für Industriefirmen - Server-Komponente",
  "dependencies": {
    "@types/express-serve-static-core": "^5.0.6",
    "@types/qs": "^6.14.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csrf-csrf": "^4.0.3",
    "dotenv": "^16.5.0",
    "ejs": "^3.1.10",
    "exceljs": "^4.4.0",
    "express": "^5.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.0",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.0",
    "mysql2": "^3.14.1",
    "nodemailer": "^7.0.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@swc/core": "^1.12.5",
    "@swc/helpers": "^0.5.17",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^0.0.48",
    "@types/hpp": "^0.2.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^24.0.1",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.33.0",
    "@typescript-eslint/parser": "^8.34.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.0",
    "jest": "^30.0.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
